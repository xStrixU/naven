datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int     @id() @default(autoincrement())
  username    String  @unique
  displayName String
  biography   String?
  email       String  @unique
  password    String

  @@map("users")
}
